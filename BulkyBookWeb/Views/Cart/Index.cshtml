@model Bulky.Models.Cart

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Shopping Cart</h2>

@if (Model.CartProducts == null || !Model.CartProducts.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cp in Model.CartProducts)
            {
                <tr>
                    <td>@cp.Product.Title</td>
                    <td>@cp.Product.Price.ToString("C")</td>
                    <td>@cp.Quantity</td>
                    <td>@(cp.Quantity * cp.Product.Price).ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><strong>Total:</strong></td>
                <td>
                    @Model.CartProducts
                    .Sum(cp => cp.Quantity * cp.Product.Price)
                    .ToString("C")
                </td>
                <td>
                    <form asp-controller="Order" asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Checkout</button>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>
}